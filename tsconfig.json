{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "lib": ["ES6"],
    "module": "ES6",
    "moduleResolution": "node",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
